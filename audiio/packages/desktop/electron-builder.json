{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.audiio.app",
  "productName": "Audiio",
  "directories": {
    "buildResources": "build",
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "renderer/**/*",
    "package.json",
    "!**/*.map",
    "!**/node_modules/*/{CHANGELOG.md,README.md,readme.md,readme,README,test,__tests__,tests,*.ts,*.map}"
  ],
  "extraMetadata": {
    "main": "dist/main.js"
  },
  "asar": true,
  "compression": "normal",
  "mac": {
    "target": ["dmg", "zip"],
    "category": "public.app-category.music"
  },
  "win": {
    "target": [
      {
        "target": "dir",
        "arch": ["x64"]
      }
    ],
    "sign": false,
    "signAndEditExecutable": false,
    "artifactName": "Audiio-${version}-alpha"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Audio"
  }
}
