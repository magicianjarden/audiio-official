{
  "appId": "com.audiio.desktop",
  "productName": "Audiio Desktop",

  "directories": {
    "output": "release",
    "buildResources": "build"
  },

  "files": [
    "dist/**/*",
    "renderer/**/*",
    "package.json"
  ],

  "extraResources": [
    {
      "from": "../core/dist",
      "to": "core",
      "filter": ["**/*"]
    },
    {
      "from": "../ml-core/dist",
      "to": "ml-core",
      "filter": ["**/*"]
    },
    {
      "from": "../ml-sdk/dist",
      "to": "ml-sdk",
      "filter": ["**/*"]
    }
  ],

  "linux": {
    "target": ["AppImage", "deb"],
    "category": "AudioVideo",
    "icon": "build/icon.png"
  }
}