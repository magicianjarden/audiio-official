{
  "name": "audiio-desktop",
  "version": "0.1.0-alpha.1.1",
  "description": "Audiio Desktop - Unified modular music platform",
  "author": {
    "name": "Audiio Team",
    "email": "support@audiio.com"
  },
  "homepage": "https://audiio.com",
  "private": true,
  "main": "./dist/main.js",

  "scripts": {
    "dev": "tsc && electron ../../packages/desktop --dev",
    "build": "tsc",
    "start": "electron dist/main.js",
    "package": "electron-builder",
    "clean": "rm -rf dist out"
  },

  "dependencies": {
    "@audiio/core": "*",
    "@audiio/ml-core": "*",
    "@audiio/ml-sdk": "*",
    "@audiio/mobile": "*",
    "@audiio/sdk": "*",
    "bluebird-lst": "^1.0.9",
    "music-metadata": "^10.6.4",
    "node-id3": "^0.2.9",
    "socket.io-client": "^4.7.0"
  },

  "devDependencies": {
    "electron": "39.2.7",
    "electron-builder": "^25.1.8",
    "typescript": "^5.7.2"
  },

  "build": {
    "appId": "com.audiio.desktop",
    "productName": "Audiio Desktop",

    "directories": {
      "output": "release",
      "buildResources": "build"
    },

    "files": [
      "dist/**/*",
      {
        "from": "../../packages/core/dist",
        "to": "resources/core"
      },
      {
        "from": "../../packages/ml-core/dist",
        "to": "resources/ml-core"
      },
      {
        "from": "../../packages/ml-sdk/dist",
        "to": "resources/ml-sdk"
      }
    ],

    "extraResources": [
      {
        "from": "../../packages/core/dist",
        "to": "core"
      },
      {
        "from": "../../packages/ml-core/dist",
        "to": "ml-core"
      },
      {
        "from": "../../packages/ml-sdk/dist",
        "to": "ml-sdk"
      }
    ],

    "linux": {
      "target": ["AppImage", "deb"],
      "category": "AudioVideo"
    },

    "win": {
      "target": ["nsis"],
      "publisherName": "Audiio",
      "signingHashAlgorithms": ["sha256"]
    },

    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.music",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },

    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}